<h2>Current Stylists in Your Hair Salon</h2>
<% if @stylists.any?() %>
  <ul id="stylistInfo">
    <% @stylists.each() do |stylist| %>
      <li>#<strong><%= stylist.id %> : <%= stylist.name %> </strong>||<em><%= stylist.contact %></em></li>
    <% end %>
  </ul>
<% else %>
  <h2>You have no employees!</h2>
<% end %>
<p>
  <a href="/new_stylist_form"><h2>Add a New Stylist!</h2></a>
</p>
