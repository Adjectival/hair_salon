<% if @found_clients.any? %>
  <ul>
    <% @found_clients.each() do |client| %>
    <li><h3><a href="/clients/<%= client.id() %>"><%= client.name() %></h3><br> contact: <em><%= client.contact() %></em> || styled by <%= client.stylist_id() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h3>This stylist has no clients yet.</h3>
<% end %>

<div>
    <a class="btn btn-lg btn-primary" href="/stylists">Manage Stylists</a>
</div>
<div>
  <a class="btn btn-lg btn-info" href="/">Back to Main</a>
</div>
