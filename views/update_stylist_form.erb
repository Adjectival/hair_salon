  <h1>Update Information for <%= @stylist.name() %></h1>

  <form action="/stylists/<%= @stylist.id() %>/update" method="post" class="well">
    <input name="_method" type="hidden" value="patch">
    <ul>
      <li>
        <label for="name">Name: </label>
        <input type="text" name="name" id="name">
      </li>
      <li>
        <label for="phone">Contact: </label>
        <input type="text" name="contact" id="contact">
      </li>
    </ul>

    <button class="btn-lg btn-primary"type="submit">Update</button>
  </form>


  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" id="delete" class="btn-lg btn btn-danger">Delete</button><h2><%= @stylist.name() %> from Your Hair Salon!</h2>
  </form>
